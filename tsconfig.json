{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es2018", "ESNext.AsyncIterable"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSources": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "/opt/nodejs/utils": ["shared/layers/utils/nodejs/utils"],
    }
  },
  "exclude": [
    "assets",
    "node_modules",
    "**/node_modules/*",
    "cdk.out",
    "**/*.test.js"
  ]
}